<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.PIproject.controllers.ConversationController">
   <HBox>
  
<ListView fx:id="chatList" onMouseClicked="#handleItemClick" prefWidth="200" />
        <VBox>
            <TextArea fx:id="chatTextArea" editable="false" prefHeight="300" prefWidth="400" />
            <TextField fx:id="messageTextField" prefWidth="300" />
            <Button onAction="#sendMessage" text="Send" />
        </VBox>
      <Button fx:id="retour" onAction="#retour" text="&lt;-" />
    </HBox>
</VBox>
