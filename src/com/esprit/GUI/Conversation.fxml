<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.GUI.ConversationController">
   <HBox>
  
<ListView fx:id="chatList" prefWidth="200" onMouseClicked="#handleItemClick" />
        <VBox>
            <TextArea fx:id="chatTextArea" prefWidth="400" prefHeight="300" editable="false" />
            <TextField fx:id="messageTextField" prefWidth="300" />
            <Button text="Send" onAction="#sendMessage" />
        </VBox>
    </HBox>
</VBox>
